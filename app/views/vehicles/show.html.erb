<h1><%= @vehicle.state_number %></h1>
<h1><%= @vehicle.model %></h1>
<h1><%= @vehicle.tax %></h1>

<p><%= link_to "Редактировать", edit_vehicle_path(@vehicle.id) %></p>
<p><%= link_to "Добавить период владения", new_ownership_path("vehicle", @vehicle.id) %></p>

<% if current_user.admin? %>
  <%= button_to "Удалить транспортное средство", delete_vehicle_path(@vehicle.id), method: :delete %>
<% end %>
